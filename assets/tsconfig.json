{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "$lib": [
                "svelte"
            ],
            "$lib/*": [
                "svelte/*"
            ]
        },
        "verbatimModuleSyntax": true,
        "module": "nodenext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}